@model ShoppingStore_DlloSat.DAL.Entities.Category//Las vistas siempre reciben un modelo (IEnumerable), Para este caso, trae una lista de categorías

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Categoría</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <partial name="../Shared/PartialViews/_CategoryCreateEdit" />

            <div class="form-group">
                
                <input type="submit" value="Crear del post" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-success">Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
