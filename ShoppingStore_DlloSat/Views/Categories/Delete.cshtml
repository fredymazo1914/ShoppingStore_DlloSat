@model ShoppingStore_DlloSat.DAL.Entities.Category

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar Categoría</h1>

<h3>¿Está seguro que desea eliminar la categoría?</h3>
<div>

    <partial name="../Shared/PartialViews/_CategoryDetailsDelete" />

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-outline-danger" />
        <a asp-action="Index" class="btn btn-outline-success">Regresar al menú anterior</a>
    </form>
</div>
