@model ShoppingStore_DlloSat.DAL.Entities.Country//Las vistas siempre reciben un modelo (IEnumerable), Para este caso, trae una lista de países
                                                    
@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>País</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <partial name="../Shared/PartialViews/_CountryCreateEdit" />

            <div class="form-group">
                <input type="submit" value="Crear del post" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
